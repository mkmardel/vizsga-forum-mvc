{% extends 'layout.twig' %} {% block content %}
<h3>{{ title }}</h3>
<div class="row mt-4">
	<form method="post" action="index.php?controller=post&action=create">
        <div class="mb-3">
            <input type="hidden" name="category" value="{{ category }}"/>
            <label class="form-label">Hozzászólás</label>
            <textarea required class="form-control" name="content"></textarea>
        </div>
        <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Létrehoz</button>
    </form>
</div>
{% endblock %}