{% extends 'layout.twig' %} {% block content %}
<h3>{{ title }}</h3>
<div class="row mt-4">
	<form method="post" action="index.php?controller=user&action=create">
        <div class="mb-3">
            <label class="form-label">Név</label>
            <input type="text"  class="form-control" name="name">
        </div>
        <div class="mb-3">
            <label class="form-label">E-mail cím</label>
            <input type="email" required class="form-control" name="email">
        </div>
        <div class="mb-3">
            <label class="form-label">Jelszó</label>
            <input type="password" required class="form-control" name="password1">
        </div>
        <div class="mb-3">
            <label class="form-label">Jelszó újra</label>
            <input type="password" required class="form-control" name="password2">
        </div>
        <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Regisztráció</button>
    </form>
</div>
{% endblock %}